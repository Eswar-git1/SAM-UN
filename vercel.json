{
  "version": 2,
  "builds": [
    {
      "src": "static/**",
      "use": "@vercel/static"
    },
    {
      "src": "templates/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "https://your-railway-backend.railway.app/api/$1"
    },
    {
      "src": "/data/(.*)",
      "dest": "https://your-railway-backend.railway.app/data/$1"
    },
    {
      "src": "/vendor/(.*)",
      "dest": "https://your-railway-backend.railway.app/vendor/$1"
    },
    {
      "src": "/(.*)",
      "dest": "https://your-railway-backend.railway.app/$1"
    }
  ],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}